<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ARMzalogApp.Views.ChatPage"
             Title="ChatPage">

    <Grid RowDefinitions="*, Auto" Padding="10">
        <ScrollView Grid.Row="0">
            <Label x:Name="ChatOutput" Text="Здесь будет отображаться ответ..." VerticalOptions="Start" />
        </ScrollView>

        <StackLayout Grid.Row="1" Orientation="Horizontal" Spacing="10">
            <Entry x:Name="UserInput" Placeholder="Введите ваш вопрос..." HorizontalOptions="FillAndExpand" />
            <Button Text="Отправить" Clicked="OnSendButtonClicked" />
        </StackLayout>
    </Grid>
    
</ContentPage>