<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:ARMzalogApp.Converters"
             x:Class="ARMzalogApp.Views.ZavkrPages.CreateLoanZarp"
             Title="Заявка"
             BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#121212}">

    <ContentPage.Resources>
        
        <ResourceDictionary>

            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <converters:NullToBoolConverter x:Key="NullToBoolConverter" />
            
            <Color x:Key="PrimaryRed">#D32F2F</Color>
            <Color x:Key="TitleColorLight">#0A63A8</Color>
            <Color x:Key="TitleColorDark">#64B5F6</Color>

            <Style x:Key="SectionTitleStyle" TargetType="Label">
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource TitleColorLight}, Dark={StaticResource TitleColorDark}}"/>
                <Setter Property="Margin" Value="5,20,0,8"/>
                <Setter Property="TextTransform" Value="Uppercase"/>
            </Style>

            <Style x:Key="CardStyle" TargetType="Frame">
                <Setter Property="Padding" Value="15"/>
                <Setter Property="CornerRadius" Value="15"/>
                <Setter Property="HasShadow" Value="True"/>
                <Setter Property="BorderColor" Value="Transparent"/>
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=White, Dark=#1E1E1E}"/>
                <Setter Property="Margin" Value="0,0,0,5"/>
            </Style>

            <Style x:Key="FieldLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="TextColor" Value="{AppThemeBinding Light=#666666, Dark=#B0B0B0}"/>
                <Setter Property="Margin" Value="2,0,0,2"/>
            </Style>

            <Style x:Key="InputBorderStyle" TargetType="Border">
                <Setter Property="Stroke" Value="{AppThemeBinding Light=#E0E0E0, Dark=#444444}"/>
                <Setter Property="StrokeThickness" Value="1"/>
                <Setter Property="StrokeShape" Value="RoundRectangle 8"/>
                <Setter Property="Padding" Value="10,0"/>
                <Setter Property="HeightRequest" Value="45"/>
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#FAFAFA, Dark=#2C2C2C}"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>


    <Grid>
        <ScrollView IsVisible="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}">
            <VerticalStackLayout Padding="15" Spacing="5">
                
                <Label Text="Выбор режима анкеты" Style="{StaticResource SectionTitleStyle}" />
                <Frame Style="{StaticResource CardStyle}">
                    <VerticalStackLayout Spacing="12">
                        <VerticalStackLayout>
                            <Label Text="Группа резюме" Style="{StaticResource FieldLabelStyle}"/>
                            <Border Style="{StaticResource InputBorderStyle}">
                                <Picker ItemsSource="{Binding ResumeGroupList}" 
                                        ItemDisplayBinding="{Binding s_name}" 
                                        SelectedItem="{Binding SelectedResumeGroup}" />
                            </Border>
                        </VerticalStackLayout>

                        <VerticalStackLayout IsVisible="{Binding SelectedResumeGroup, Converter={StaticResource NullToBoolConverter}}">
                            <Label Text="Тип резюме (Режим)" Style="{StaticResource FieldLabelStyle}"/>
                            <Border Style="{StaticResource InputBorderStyle}">
                                <Picker ItemsSource="{Binding ResumeTypeList}" 
                                        ItemDisplayBinding="{Binding SNam}" 
                                        SelectedItem="{Binding SelectedResumeType}" />
                            </Border>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Frame>
                <Label Text="I. Данные о кредите" Style="{StaticResource SectionTitleStyle}" />
            <Frame Style="{StaticResource CardStyle}">
                <VerticalStackLayout Spacing="12">
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <VerticalStackLayout Grid.Column="0">
                            <Label Text="Заявление №" Style="{StaticResource FieldLabelStyle}"/>
                            <Border Style="{StaticResource InputBorderStyle}">
                                <Entry Text="{Binding SelectedKlient.ZvNom}" IsReadOnly="True" Placeholder="Auto"/>
                            </Border>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1">
                            <Label Text="Сумма" Style="{StaticResource FieldLabelStyle}"/>
                            <Border Style="{StaticResource InputBorderStyle}">
                                <Entry Keyboard="Numeric" Text="{Binding SelectedKlient.ZvSum}" Placeholder="0.00" />
                            </Border>
                        </VerticalStackLayout>
                    </Grid>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <VerticalStackLayout Grid.Column="0">
                            <Label Text="Срок (мес)" Style="{StaticResource FieldLabelStyle}"/>
                            <Border Style="{StaticResource InputBorderStyle}">
                                <Entry Keyboard="Numeric" Text="{Binding SelectedKlient.ZvSrok}" Placeholder="12"/>
                            </Border>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1">
                            <Label Text="Валюта" Style="{StaticResource FieldLabelStyle}"/>
                            <Border Style="{StaticResource InputBorderStyle}">
                                <Picker ItemsSource="{Binding CurrencyList}" ItemDisplayBinding="{Binding Name}" SelectedItem="{Binding SelectedCurrency}" Title="Валюта"/>
                            </Border>
                        </VerticalStackLayout>
                    </Grid>

                    <VerticalStackLayout>
                        <Label Text="Вид кредита" Style="{StaticResource FieldLabelStyle}"/>
                        <Border Style="{StaticResource InputBorderStyle}">
                            <Picker ItemsSource="{Binding LoanTypeList}" ItemDisplayBinding="{Binding Name}" SelectedItem="{Binding SelectedLoanType}" Title="Выберите вид"/>
                        </Border>
                    </VerticalStackLayout>

                    <VerticalStackLayout>
                        <Label Text="Цель кредита" Style="{StaticResource FieldLabelStyle}"/>
                        <Border Style="{StaticResource InputBorderStyle}">
                            <Picker ItemsSource="{Binding PurposesList}" ItemDisplayBinding="{Binding SNam}" SelectedItem="{Binding SelectedPurpose}" Title="Выберите цель"/>
                        </Border>
                    </VerticalStackLayout>

                    <VerticalStackLayout>
                        <Label Text="Уровень Кред. Комитета" Style="{StaticResource FieldLabelStyle}"/>
                        <Border Style="{StaticResource InputBorderStyle}">
                            <Picker ItemsSource="{Binding KredurList}" ItemDisplayBinding="{Binding SNam}" SelectedItem="{Binding SelectedKredur}" Title="Уровень КК"/>
                        </Border>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <Label Text="II. Клиент" Style="{StaticResource SectionTitleStyle}" />
            <Frame Style="{StaticResource CardStyle}">
                <VerticalStackLayout Spacing="12">
                    <VerticalStackLayout>
                        <Label Text="ФИО Клиента" Style="{StaticResource FieldLabelStyle}"/>
                        <Grid ColumnDefinitions="*, Auto" ColumnSpacing="5">
                            <Border Style="{StaticResource InputBorderStyle}" Grid.Column="0">
                                <Entry Text="{Binding KlientFullName}" Placeholder="Фамилия Имя Отчество"/>
                            </Border>
                            <Button Grid.Column="1" Text="Найти" HeightRequest="45" CornerRadius="8" BackgroundColor="#5BCCEB" TextColor="White" Command="{Binding SearchClientCommand}"/>
                        </Grid>
                    </VerticalStackLayout>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <VerticalStackLayout Grid.Column="0">
                            <Label Text="ИНН" Style="{StaticResource FieldLabelStyle}"/>
                            <Border Style="{StaticResource InputBorderStyle}">
                                <Entry Text="{Binding SelectedKlient.ZvInn}" Keyboard="Numeric" Placeholder="14 цифр"/>
                            </Border>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1">
                            <Label Text="Дата рождения" Style="{StaticResource FieldLabelStyle}"/>
                            <Border Style="{StaticResource InputBorderStyle}">
                                <DatePicker Date="{Binding SelectedKlient.ZvFdr}" Format="dd.MM.yyyy"/>
                            </Border>
                        </VerticalStackLayout>
                    </Grid>

                    <VerticalStackLayout>
                        <Label Text="Место рождения" Style="{StaticResource FieldLabelStyle}"/>
                        <Border Style="{StaticResource InputBorderStyle}">
                            <Entry Text="{Binding SelectedKlient.ZvFmr}" Placeholder="Область, Район, Село"/>
                        </Border>
                    </VerticalStackLayout>
                    <VerticalStackLayout>
                        <Label Text="Аты-Жону (Отчество)" Style="{StaticResource FieldLabelStyle}"/>
                        <Border Style="{StaticResource InputBorderStyle}">
                            <Entry Text="{Binding SelectedKlient.Atyjoni}" Placeholder="Аты-Жону"/>
                        </Border>
                    </VerticalStackLayout>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <VerticalStackLayout Grid.Column="0">
                            <Label Text="Пол" Style="{StaticResource FieldLabelStyle}"/>
                            <Border Style="{StaticResource InputBorderStyle}">
                                <Picker Title="Пол" SelectedItem="{Binding SelectedGender}">
                                    <Picker.ItemsSource>
                                        <x:Array Type="{x:Type x:String}">
                                            <x:String>Мужской</x:String>
                                            <x:String>Женский</x:String>
                                        </x:Array>
                                    </Picker.ItemsSource>
                                </Picker>
                            </Border>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1">
                            <Label Text="Гражданство" Style="{StaticResource FieldLabelStyle}"/>
                            <Border Style="{StaticResource InputBorderStyle}">
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding OpenCitizenshipSearchCommand}" />
                                </Border.GestureRecognizers>
                                <Grid ColumnDefinitions="*, Auto">
                                    <Label Text="{Binding SelectedCitizenship.Name, TargetNullValue='Выберите страну...'}" VerticalOptions="Center" TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                                    <Image Grid.Column="1" Source="chevron_down.png" HeightRequest="15" Opacity="0.5"/>
                                </Grid>
                            </Border>
                        </VerticalStackLayout>
                    </Grid>

                    <VerticalStackLayout>
                        <Label Text="Национальность" Style="{StaticResource FieldLabelStyle}"/>
                        <Border Style="{StaticResource InputBorderStyle}">
                            <Picker ItemsSource="{Binding NationalityList}" ItemDisplayBinding="{Binding SNam}" SelectedItem="{Binding SelectedNationality}" Title="Выберите..."/>
                        </Border>
                    </VerticalStackLayout>
                    <VerticalStackLayout>
                        <Label Text="Вид Клиента" Style="{StaticResource FieldLabelStyle}"/>
                        <Border Style="{StaticResource InputBorderStyle}">
                            <Picker ItemsSource="{Binding VidClientList}" 
                ItemDisplayBinding="{Binding SNam}" 
                SelectedItem="{Binding SelectedVidClient}" 
                Title="Выберите вид клиента..."/>
                        </Border>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <Label Text="III. Паспортные данные" Style="{StaticResource SectionTitleStyle}" />
            <Frame Style="{StaticResource CardStyle}">
                <VerticalStackLayout Spacing="12">
                    <Grid ColumnDefinitions="0.3*, 0.7*" ColumnSpacing="10">
                        <VerticalStackLayout Grid.Column="0">
                            <Label Text="Серия" Style="{StaticResource FieldLabelStyle}"/>
                            <Border Style="{StaticResource InputBorderStyle}">
                                <Entry Text="{Binding SelectedKlient.ZvSrdok}" Placeholder="ID"/>
                            </Border>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1">
                            <Label Text="№ Документа" Style="{StaticResource FieldLabelStyle}"/>
                            <Border Style="{StaticResource InputBorderStyle}">
                                <Entry Text="{Binding SelectedKlient.ZvNdok}" Keyboard="Numeric"/>
                            </Border>
                        </VerticalStackLayout>
                    </Grid>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <VerticalStackLayout Grid.Column="0">
                            <Label Text="Дата выдачи" Style="{StaticResource FieldLabelStyle}"/>
                            <Border Style="{StaticResource InputBorderStyle}">
                                <DatePicker Date="{Binding SelectedKlient.ZvDatevp}" Format="dd.MM.yyyy"/>
                            </Border>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1">
                            <Label Text="Срок действия" Style="{StaticResource FieldLabelStyle}"/>
                            <Border Style="{StaticResource InputBorderStyle}">
                                <DatePicker Date="{Binding SelectedKlient.ZvDokend}" Format="dd.MM.yyyy"/>
                            </Border>
                        </VerticalStackLayout>
                    </Grid>
                    <VerticalStackLayout>
                        <Label Text="Орган выдачи" Style="{StaticResource FieldLabelStyle}"/>
                        <Border Style="{StaticResource InputBorderStyle}">
                            <Entry Text="{Binding SelectedKlient.ZvMvd}" Placeholder="МКК..."/>
                        </Border>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <Label Text="IV. Адреса и Контакты" Style="{StaticResource SectionTitleStyle}" />
            <Frame Style="{StaticResource CardStyle}">
                <VerticalStackLayout Spacing="12">
                    <VerticalStackLayout>
                        <Label Text="Адрес прописки" Style="{StaticResource FieldLabelStyle}"/>
                        <Border Style="{StaticResource InputBorderStyle}">
                            <Entry Text="{Binding SelectedKlient.RegAdres}" Placeholder="По паспорту"/>
                        </Border>
                    </VerticalStackLayout>

                    <VerticalStackLayout>
                        <Label Text="Фактический адрес" Style="{StaticResource FieldLabelStyle}"/>
                        <Border Style="{StaticResource InputBorderStyle}">
                            <Entry Text="{Binding SelectedKlient.FaktAdres}" Placeholder="Где живет сейчас"/>
                        </Border>
                    </VerticalStackLayout>

                    <VerticalStackLayout>
                        <Label Text="Катталган дареги (ID Proch)" Style="{StaticResource FieldLabelStyle}"/>
                        <Border Style="{StaticResource InputBorderStyle}">
                            <Entry Text="{Binding IdProch}" Placeholder="Доп. адрес"/>
                        </Border>
                    </VerticalStackLayout>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <VerticalStackLayout Grid.Column="0">
                            <Label Text="Телефон (осн)" Style="{StaticResource FieldLabelStyle}"/>
                            <Border Style="{StaticResource InputBorderStyle}">
                                <Entry Text="{Binding SelectedKlient.ZvTel}" Keyboard="Telephone"/>
                            </Border>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1">
                            <Label Text="Телефон (доп)" Style="{StaticResource FieldLabelStyle}"/>
                            <Border Style="{StaticResource InputBorderStyle}">
                                <Entry Text="{Binding SelectedKlient.ZvTelfax}" Keyboard="Telephone"/>
                            </Border>
                        </VerticalStackLayout>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <Label Text="V. Работа и Доход" Style="{StaticResource SectionTitleStyle}" />
            <Frame Style="{StaticResource CardStyle}">
                <VerticalStackLayout Spacing="12">
                    <VerticalStackLayout>
                        <Label Text="Место работы / Должность" Style="{StaticResource FieldLabelStyle}"/>
                        <Border Style="{StaticResource InputBorderStyle}">
                            <Entry Text="{Binding SelectedKlient.Doljnoct}" Placeholder="Организация, должность"/>
                        </Border>
                    </VerticalStackLayout>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <VerticalStackLayout Grid.Column="0">
                            <Label Text="Стаж (RabNach)" Style="{StaticResource FieldLabelStyle}"/>
                            <Border Style="{StaticResource InputBorderStyle}">
                                <Entry Text="{Binding SelectedKlient.BvRabStaj}" Placeholder="лет/мес"/>
                            </Border>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1">
                            <Label Text="Зарплата" Style="{StaticResource FieldLabelStyle}"/>
                            <Border Style="{StaticResource InputBorderStyle}">
                                <Entry Text="{Binding SalaryAmount}" Keyboard="Numeric"/>
                            </Border>
                        </VerticalStackLayout>
                    </Grid>

                    <VerticalStackLayout>
                        <Label Text="Тип дохода" Style="{StaticResource FieldLabelStyle}"/>
                        <Border Style="{StaticResource InputBorderStyle}">
                            <Picker ItemsSource="{Binding IncomeTypeList}" ItemDisplayBinding="{Binding Name}" SelectedItem="{Binding SelectedIncomeType}" Title="Выберите тип"/>
                        </Border>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <Label Text="VI. Члены семьи" Style="{StaticResource SectionTitleStyle}" />
            <Frame Style="{StaticResource CardStyle}">
                <VerticalStackLayout Spacing="12">
                    <VerticalStackLayout>
                        <Label Text="Семейное положение" Style="{StaticResource FieldLabelStyle}"/>
                        <Border Style="{StaticResource InputBorderStyle}">
                            <Picker ItemsSource="{Binding FamilyStatusList}" ItemDisplayBinding="{Binding Name}" SelectedItem="{Binding SelectedFamilyStatus}" Title="Выберите статус"/>
                        </Border>
                    </VerticalStackLayout>

                    <VerticalStackLayout>
                        <Label Text="ФИО супруга(и)" Style="{StaticResource FieldLabelStyle}"/>
                        <Border Style="{StaticResource InputBorderStyle}">
                            <Entry Text="{Binding SelectedKlient.FioCupr}" />
                        </Border>
                    </VerticalStackLayout>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <VerticalStackLayout Grid.Column="0">
                            <Label Text="Раб. супруга" Style="{StaticResource FieldLabelStyle}"/>
                            <Border Style="{StaticResource InputBorderStyle}">
                                <Entry Text="{Binding SelectedKlient.RabCupr}" Placeholder="Место работы"/>
                            </Border>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1">
                            <Label Text="Тел. супруга" Style="{StaticResource FieldLabelStyle}"/>
                            <Border Style="{StaticResource InputBorderStyle}">
                                <Entry Text="{Binding SelectedKlient.BvTelefSupr}" Keyboard="Telephone"/>
                            </Border>
                        </VerticalStackLayout>
                    </Grid>

                    <VerticalStackLayout>
                        <Label Text="Количество детей" Style="{StaticResource FieldLabelStyle}"/>
                        <Border Style="{StaticResource InputBorderStyle}">
                            <Entry Text="{Binding ChildrenCount}" Keyboard="Numeric" Placeholder="0"/>
                        </Border>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <Label Text="VII. Близкий родственник" Style="{StaticResource SectionTitleStyle}" />
            <Frame Style="{StaticResource CardStyle}">
                <VerticalStackLayout Spacing="12">
                    <VerticalStackLayout>
                        <Label Text="ФИО Родственника" Style="{StaticResource FieldLabelStyle}"/>
                        <Border Style="{StaticResource InputBorderStyle}">
                            <Entry Text="{Binding DbTipbis}" Placeholder="ФИО"/>
                        </Border>
                    </VerticalStackLayout>

                    <VerticalStackLayout>
                        <Label Text="Кем приходится" Style="{StaticResource FieldLabelStyle}"/>
                        <Border Style="{StaticResource InputBorderStyle}">
                            <Entry Text="{Binding DbGeogr}" Placeholder="Брат, Мать, Отец..."/>
                        </Border>
                    </VerticalStackLayout>

                    <VerticalStackLayout>
                        <Label Text="Место работы" Style="{StaticResource FieldLabelStyle}"/>
                        <Border Style="{StaticResource InputBorderStyle}">
                            <Entry Text="{Binding DbPeriod}" />
                        </Border>
                    </VerticalStackLayout>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <VerticalStackLayout Grid.Column="0">
                            <Label Text="Телефон" Style="{StaticResource FieldLabelStyle}"/>
                            <Border Style="{StaticResource InputBorderStyle}">
                                <Entry Text="{Binding DbPoctavka}" Keyboard="Telephone"/>
                            </Border>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                            <Label Text="Поручитель?" Style="{StaticResource FieldLabelStyle}"/>
                            <CheckBox IsChecked="{Binding IsRelativeGuarantor}" Color="{StaticResource PrimaryRed}"/>
                        </VerticalStackLayout>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="15" Margin="0,20,0,40">
                <Button Grid.Column="0" Text="Отмена" BackgroundColor="{AppThemeBinding Light=#E0E0E0, Dark=#333333}" TextColor="{AppThemeBinding Light=Black, Dark=White}" CornerRadius="25" HeightRequest="50" Command="{Binding BackCommand}"/>
                <Button Grid.Column="1" Text="Сохранить" BackgroundColor="{StaticResource PrimaryRed}" TextColor="White" CornerRadius="25" HeightRequest="50" FontAttributes="Bold" Command="{Binding SaveCommand}"/>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
    </Grid>
</ContentPage>