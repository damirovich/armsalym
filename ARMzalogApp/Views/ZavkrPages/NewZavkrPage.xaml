<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ARMzalogApp.Views.ZavkrPages.NewZavkrPage"
             Title="NewZavkrPage">
    <VerticalStackLayout>
       
        <VerticalStackLayout Padding="20" Spacing="20">
            <Label Text="Новая заявка на получение кредита"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="#333333"
                   HorizontalOptions="Center"
                   Margin="0,10,0,10"/>

            <Button Text="Зарплатные"
                    Clicked="OnZarplatClicked"
                    BackgroundColor="#cc0000"
                    TextColor="White"
                    FontAttributes="Bold"
                    FontSize="16"
                    CornerRadius="10"
                    HeightRequest="50"/>

            <Button Text="Беззалоговые"
                    Clicked="OnBezzalogClicked"
                    BackgroundColor="#cc0000"
                    TextColor="White"
                    FontAttributes="Bold"
                    FontSize="16"
                    CornerRadius="10"
                    HeightRequest="50"/>

            <Button Text="Залоговые"
                    Clicked="OnZalogClicked"
                    BackgroundColor="#cc0000"
                    TextColor="White"
                    FontAttributes="Bold"
                    FontSize="16"
                    CornerRadius="10"
                    HeightRequest="50"/>
        </VerticalStackLayout>
    </VerticalStackLayout>

</ContentPage>