<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:localF="clr-namespace:ARMzalogApp"
             x:Class="ARMzalogApp.Views.ListPoruch"
             Title="ListPoruch">
    <VerticalStackLayout>
        <Label 
            Text="Список поручителей" VerticalOptions="Center" HorizontalOptions="Center" FontAttributes="Bold" Margin="0,15,0,0"
             FontSize="{Binding Source={x:Static localF:App.Settings}, Path=FontSize}" TextColor="{DynamicResource PrimaryTextColor}" />

        <CollectionView ItemsSource="{Binding allPoruch}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="Black"  BackgroundColor="{DynamicResource BackgroundColor}" Margin="15" Padding="15" >
                        <StackLayout Spacing="0">
                            <StackLayout Orientation="Horizontal">
                                <Label Text="ФИО: " FontAttributes="Bold" FontSize="{Binding Source={x:Static localF:App.Settings}, Path=FontSize}" TextColor="{DynamicResource PrimaryTextColor}"/>
                                <Label Text= "{Binding Fio}" FontAttributes="Bold" FontSize="{Binding Source={x:Static localF:App.Settings}, Path=FontSize}" TextColor="{DynamicResource PrimaryTextColor}"/>
                            </StackLayout>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="ИНН: " FontAttributes="Bold" FontSize="{Binding Source={x:Static localF:App.Settings}, Path=FontSize}" TextColor="{DynamicResource PrimaryTextColor}"/>
                                <Label Text= "{Binding Inn}" FontAttributes="Bold" FontSize="{Binding Source={x:Static localF:App.Settings}, Path=FontSize}" TextColor="{DynamicResource PrimaryTextColor}"/>
                            </StackLayout>
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnFrameTapped"/>
                            </StackLayout.GestureRecognizers>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        
    </VerticalStackLayout>
</ContentPage>