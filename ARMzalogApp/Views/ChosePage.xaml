<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ARMzalogApp.Views.ChosePage"
             Title="ChosePage">
    <VerticalStackLayout BackgroundColor="{DynamicResource SecondTextColor}">

        <Button Text="Кредитные договора" Clicked="OnDogvkPage" Margin="15" BackgroundColor="#cc0000" FontAttributes="Bold" Padding="10,0,20,0"/>
        <Button Text="Новые заявки на получение кредитов" Clicked="OnNewZavkrPage" Margin="15" BackgroundColor="#cc0000" FontAttributes="Bold" Padding="0,10,0,10"/>
        <Button Text="Список заявок" Clicked="OnZavkrPage" Margin="15" BackgroundColor="#cc0000" FontAttributes="Bold" Padding="10,0,10,0"/>
        

        <ActivityIndicator x:Name="loadingIndicator"
               IsRunning="False"
               IsVisible="False"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
        
    </VerticalStackLayout>
    
</ContentPage>